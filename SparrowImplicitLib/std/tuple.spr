module std.tuple

concept TupleType(x) if (
       typeOf(x.arity) == Int
    && isValid(x.v1)
    && isValid(x.v2)
    )

using oper_precedence_~ = oper_precedence_*

[initCtor, autoBitcopiable] datatype Tuple(t1, t2: Type)
    using arity = 2
    v1: t1
    v2: t2

