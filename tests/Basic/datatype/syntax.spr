// Test purpose: different syntaxes for declaring datatypes

datatype Empty

datatype Empty2 {}
datatype Empty3


datatype WithFields
    x: Int
    y: Int

datatype WithFields2 {;;,; x: Int ,,,;, y: Int;,;}

datatype WithInit = Int

datatype WithUsing
    using ValueType = Int
    x: Int

datatype Generic(t: Type)
    x: t
    using ValueType = t

datatype Generic2(t: Type)
    using ValueType = t
    x: ValueType

datatype GenericIf(t: Type) if t == Int
    using ValueType = Int
    using IsInt = true
    x: Int

datatype GenericIf2(t: Type) if t != Int
    using ValueType = t
    using IsInt = false
    x: t

[native("test")]
fun test(n: Int)
    // format off
    ;
    // format on
        var o1: Empty
        var o2: Empty2
        var o3: Empty3
        writeLn(sizeOf(o1))
        writeLn(sizeOf(o2))
        writeLn(sizeOf(o3))
    writeLn('---')
        var o1: WithFields
        var o2: WithFields2
        writeLn(sizeOf(o1))
        writeLn(sizeOf(o2))
    writeLn('---')
        var o1: WithInit
        writeLn(sizeOf(o1))
    writeLn('---')
        var o1: WithUsing
        writeLn(sizeOf(o1))
    writeLn('---')
        var o1: Generic(Double)
        var o2: Generic2(Char)
        writeLn(sizeOf(o1))
        writeLn(sizeOf(o2))
    writeLn('---')
        var o1: GenericIf(Int)
        var o2: GenericIf2(Char)
        writeLn(sizeOf(o1))
        writeLn(sizeOf(o2))

