import std.ranges;

fun getT: Bool
{
    cout << "T.";
    return true;
}

fun getF: Bool
{
    cout << "F.";
    return false;
}

class BoolValue
{
    fun ctor(b: Bool)
    {
        this.b ctor b;
        cout << "C";
        if ( b )
            cout << "t";
        else
            cout << "f";
        cout << '.';
    }

    fun dtor
    {
        cout << "D";
        if ( b )
            cout << "t";
        else
            cout << "f";
        cout << '.';
    }

    var b: Bool;
}

fun sprMain
{
    if ( programArgs.size() < 2 )
        return;
    var n = programArgs(1) asInt;

    if      ( n == 1 ) test1();
    else if ( n == 2 ) test2();
    else if ( n == 3 ) test3();
    else if ( n == 4 ) test4();
    else if ( n == 5 ) test5();
}

fun test1
{
    var t = true;
    var f = false;

    cout << (t || t) << endl;
    cout << (t || f) << endl;
    cout << (f || t) << endl;
    cout << (f || f) << endl;
    cout << "---" << endl;
    cout << (t || t || t) << endl;
    cout << (t || t || f) << endl;
    cout << (t || f || t) << endl;
    cout << (t || f || f) << endl;
    cout << (f || t || t) << endl;
    cout << (f || t || f) << endl;
    cout << (f || f || t) << endl;
    cout << (f || f || f) << endl;
}


