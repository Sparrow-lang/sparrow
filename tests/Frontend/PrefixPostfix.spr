
fun +++(x: @Int): @Int
{
    x += 1;
    return x;
}

fun ---(x: @Int): @Int
{
    x -= 1;
    return x;
}


fun pre_+++(x: @Int): @Int
{
    x += 1;
    return x;
}

fun pre_---(x: @Int): @Int
{
    x -= 1;
    return x;
}

fun post_+++(x: @Int): Int
{
    let r = x;
    x += 1;
    return r;
}

fun post_---(x: @Int): Int
{
    let r = x;
    x -= 1;
    return r;
}

fun sprMain
{
    if ( programArgs.size() < 2 )
        return;
    let n = programArgs(1) asInt;

    if      n == 1; test1
    else if n == 2; test2
    else if n == 3; test3
    else if n == 4; test4
}

fun test1
{
    var x = 10;

    cout << (+++x) << endl;
    cout << (+++x) << endl;
    cout << (+++x) << endl;
    cout << (---x) << endl;
    cout << (---x) << endl;
    cout << (---x) << endl;
}
