fun test1
{
    cout << "Is Mercury orbiting Sun? " << orbits("mercury", "sun")() << endl;
    cout << "Is Mercury a planet? " << planet("mercury")() << endl;

    var x: logic.LStr;
    var pred = satellite(x);
    while ( pred() )
    {
        //assert(x.isSet());
        cout << "Satellite: " << x.get() << endl;
    }
}
