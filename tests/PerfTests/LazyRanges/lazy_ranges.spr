import std.algorithms;
import std.ranges;
import std.rMath;

fun nextCollatz n = ife(n%2==0, n/2, n*3+1);
fun collatzSeq(n: ULong) = generate1(n, \nextCollatz) takeUntil (fun n = n==1);

fun sprMain
{
    if ( programArgs.size() < 2 )
        return;
    let n = programArgs(1) asInt;

    let res = (1..) map \collatzSeq map \rangeSize takeWhile (fun.{n} s = s < n) rootMeanSquare;
    cout << res << endl;
}

