fun abs(x: Double): Double
    if ( x < 0.0 )
        return -x
    else
        return x

fun poly3(a, b, c, d, x: Double): Double
    return a * x * x * x + b * x * x + c * x + d

fun secantMethod(a, b, c, d, x1, x2, err: Double): Double
    var t, p1, p2: Double

    while abs(poly3(a, b, c, d, x2)) > err
        p2 = poly3(a, b, c, d, x2)
        p1 = poly3(a, b, c, d, x1)
        t = x2 - p2 * (x2 - x1) / (p2 - p1)
        x1 = x2
        x2 = t

    return t

