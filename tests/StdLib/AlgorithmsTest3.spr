fun test2()
    var li: List(Int)
    makeList(li)
    var lr = li.all()

    replace(lr, -8, 42)
    printRange(lr)
    replace(lr, 100, 43)
    printRange(lr)
/*<<<Replacing(2)
3 1 -4 42 42 7 -4 42 3 -5 -10 -6 -10 7 42
3 1 -4 42 42 7 -4 42 3 -5 -10 -6 -10 7 42
>>>*/

fun test3()
