fun test12()
    let a = Array(MyObj)(createRangeAscending(1000))
    var i = 0

    printSizeInfo(a)
    while i < a.size() ; i = i + 1
        if ( a.at(i).x != i )
            cout << "test failed" << endl;

    let aa = a

    i = 0
    printSizeInfo(aa)
    while i < aa.size() ; i = i + 1
        if ( aa.at(i).x != i )
            cout << "test failed" << endl;

    var aaa = Array(MyObj)(1000)

    aaa.assign(createRangeAscending(1000))
    i = 0
    printSizeInfo(aaa)
    while i < aaa.size() ; i = i + 1
        if ( aaa.at(i).x != i )
            cout << "test failed" << endl;
    ;
