fun test13()
    let v = Array(MyObj)(createRangeAscending(8))
    var r = v.subrange(0, 0)

    while !r.isEmpty() ; r.popFront()
        cout << r.front().x << endl;
    r = v.subrange(0, 1)
    while !r.isEmpty() ; r.popFront()
        cout << r.front().x << endl;
    r = v.subrange(2, 3)
    while !r.isEmpty() ; r.popFront()
        cout << r.front().x << endl;
    r = v.subrange(0, v.size())
    while !r.isEmpty() ; r.popFront()
        cout << r.front().x << endl;
