fun test1
{
    var f0 = \stdFunInt;
    var r0 = f0(10);
    cout << " => " << r0 << endl;

    var f1 = \stdFun;
    var r1 = f1("Hello, world!");
    cout << " => " << r1 << endl;
}
/*<<< Basic testing of FunctionPtr(1)
stdFunInt(10) called => 100
stdFun(Hello, world!) called => stdFun
>>>*/

