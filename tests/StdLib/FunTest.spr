import std.function(Function);
import std.string(String);

fun assert(cond: Bool) {
    if ( !cond )
        cout << "Assertion failed!!!" << endl;
}

fun stdFunInt(n: Int): Int
{
    cout << "stdFunInt(" << n << ") called";
    return n*10;
}

fun stdFun(s: String): String
{
    if ( s.isEmpty() )
        cout << "Given string is empty!" << endl << flush;
    cout << "stdFun(" << s << ") called" << flush;
    return "stdFun";
}

class FunctorInt
{
    fun ctor(n: Int)
    {
        storedNum ctor n;
    }
    fun ()(n: Int): Int
    {
        cout << "Functor(" << storedNum << ")(" << n << ") called" << flush;
        return n*storedNum;
    }
    var storedNum: Int;
}

class Functor
{
    fun ctor(s: String)
    {
        storedString ctor s;
    }
    fun ()(s: String): String
    {
        cout << "Functor(" << storedString << ")(" << s << ") called" << flush;
        return "Functor";
    }
    var storedString: String;
}

class BigFunctor
{
    fun () (p1, p2, p3, p4, p5, p6, p7, p8, p9, p10: Int): Int
    {
        return p1+p2+p3+p4+p5+p6+p7+p8+p9+p10;
    }
}

[initCtor] class Counter
{
    var count: Int;

    fun (): Int = ++count;
}

fun sprMain
{
    if ( programArgs.size() < 2 )
        return;
    var n = programArgs(1) asInt;

    if      n == 1; test1
    else if n == 2; test2
    else if n == 3; test3
    else if n == 4; test4
    else if n == 5; test5
    else if n == 6; test6
    else if n == 7; test7
