fun test7()
{
    var a = StaticArray(MyObj, 4)(createRangeAscending(4));
    var r = a.all();

    while !r.isEmpty() ; r.popFront();
        cout << r.front().x << endl;
    r = ContiguousMemoryRange(MyObj)(a.all());
    while !r.isEmpty() ; r.popFront();
        r.front().x = r.front().x + 1;
    printSizeInfo(a);
    printStaticArray(a);
}
/*<<<Range access(7)
