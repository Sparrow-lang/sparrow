1000
false
1000
>>>*/

fun test12()
{
    var v = StaticArray(MyObj, 8)(createRangeAscending(8));
    var r = v.subrange(0, 0);

    while !r.isEmpty() ; r.popFront();
        cout << r.front().x << endl;
    r = v.subrange(0, 1);
    while !r.isEmpty() ; r.popFront();
        cout << r.front().x << endl;
    r = v.subrange(2, 3);
    while !r.isEmpty() ; r.popFront();
        cout << r.front().x << endl;
    r = v.subrange(0, v.size());
    while !r.isEmpty() ; r.popFront();
        cout << r.front().x << endl;
}
